      </button>
    </div>
      <!-- Modal Content -->
    <div class="space-y-8">
      <!-- Project Overview -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Project Image -->
        <div class="lg:col-span-2">
          <div class="relative h-64 lg:h-80 bg-gradient-to-br from-gray-700 to-gray-800 rounded-xl overflow-hidden">
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center">
                <div class="text-6xl mb-4">🖼️</div>
                <div class="text-white/70 text-lg font-medium">Project Screenshot</div>
                <div class="text-white/50 text-sm mt-2">Add your project image here</div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Project Quick Info -->
        <div class="space-y-4">
          <div class="bg-gray-800/50 p-4 rounded-xl border border-gray-700">
            <h4 class="text-sm font-semibold text-gray-400 mb-2">PROJECT INFO</h4>
