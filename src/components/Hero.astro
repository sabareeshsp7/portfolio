---
// Personal portfolio hero data
const heroData = {
  title: "I'm building the future with",
  subtitle: "Code & Intelligence",
  description: "Engineering student passionate about AI/ML and software development. I create innovative solutions through machine learning, web technologies, and open-source contributions that solve real-world problems.",
  backgroundQuestion: "What describes me best?",
  backgroundOptions: [
    { id: "student", label: "I'm an Engineering Student", active: true },
    { id: "self-taught", label: "I'm Self-Taught", active: false }
  ],
  statText: "Continuously learning and building projects that combine AI/ML with modern web technologies",
  ctaText: "Explore My Journey",
  skills: ["AI/ML Enthusiast", "Full-Stack Developer", "Open Source Contributor"]
};
---
<section class="min-h-screen bg-gray-900 flex items-center px-8 lg:px-16 pt-20" role="main" aria-label="Portfolio Hero Section">
  <div class="max-w-7xl mx-auto w-full">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">      <!-- Left Side - Hero Image (First on Mobile) -->
      <div 
        class="order-1 lg:order-1 flex justify-center lg:justify-start"
        style="opacity: 0; transform: translateX(-50px);"
        data-animate="image"
        role="img"
        aria-label="Developer Portfolio Hero Image"
      >        <div class="relative group floating">
          <!-- Clean Image Container -->
          <div class="relative w-80 h-96 lg:w-96 lg:h-[500px] rounded-2xl overflow-hidden shadow-2xl">            <!-- Background Gradient for Loading State -->
            <div class="absolute inset-0 bg-gradient-to-br from-blue-500 via-purple-600 to-pink-500 z-0"></div>            <!-- Main Image - FRONT OF EVERYTHING -->
            <img 
              src="/sabari.png"
              alt="Developer Portfolio - Professional headshot"
              class="absolute inset-0 w-full h-full object-cover object-center transition-all duration-700 group-hover:scale-105 z-50 rounded-2xl"
              loading="eager"
              style="z-index: 100 !important; position: absolute !important; opacity: 1 !important;"
              onerror="console.log('‚ùå Image failed to load:', this.src); this.style.display='none'; this.parentElement.querySelector('.fallback-visible').style.display='flex';"
              onload="console.log('‚úÖ Image loaded successfully:', this.src); this.parentElement.querySelector('.fallback-visible').style.display='none';"
            />
            
            <!-- Fallback Text (visible if image fails) -->
            <div class="fallback-visible absolute inset-0 z-10 flex items-center justify-center text-white text-2xl font-bold bg-gradient-to-br from-blue-600 via-purple-600 to-pink-600">
              <div class="text-center">
                <div class="text-6xl mb-4">üë®‚Äçüíª</div>
                <div class="text-xl">Sabari</div>
                <div class="text-sm text-gray-200 mt-2">AI/ML Engineer</div>
              </div>
            </div>
            
            <!-- Animated Border (behind image) -->
            <div class="absolute inset-0 z-5 rounded-2xl border-4 border-transparent bg-gradient-to-br from-blue-400 via-purple-500 to-pink-400 bg-clip-border animate-border-spin pointer-events-none"></div>
          </div>
          
          <!-- External Decorative Elements -->
          <div class="absolute -top-6 -right-6 w-24 h-24 bg-gradient-to-br from-cyan-400 to-blue-500 rounded-full opacity-20 blur-2xl animate-pulse group-hover:opacity-30 transition-opacity duration-700"></div>
          <div class="absolute -bottom-6 -left-6 w-20 h-20 bg-gradient-to-br from-purple-400 to-pink-500 rounded-full opacity-20 blur-xl animate-pulse delay-1000 group-hover:opacity-30 transition-opacity duration-700"></div>
          <div class="absolute top-1/3 -left-8 w-16 h-16 bg-gradient-to-br from-pink-400 to-orange-400 rounded-full opacity-15 blur-lg animate-pulse delay-500 group-hover:opacity-25 transition-opacity duration-700"></div>
          
          <!-- Interactive Glow Effect -->
          <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-blue-500/20 via-purple-600/20 to-pink-500/20 opacity-0 group-hover:opacity-100 transition-opacity duration-700 blur-xl transform scale-110"></div>
        </div>
      </div>

      <!-- Right Side - Personal Brand Content (Second on Mobile) -->
      <div 
        class="order-2 lg:order-2 text-center lg:text-left"
        style="opacity: 0; transform: translateX(50px);"
        data-animate="content"
      >        <!-- Animated Three-Line Headline -->
        <div class="animated-headline-container text-center lg:text-left mb-8">
          <h1 class="font-black text-white leading-none overflow-hidden">
            <div class="animated-line opacity-0" data-line="1">
              <span class="gradient-text-1">Building code that cares</span>
            </div>
            <div class="animated-line opacity-0" data-line="2">
              <span class="gradient-text-2">systems that scale</span>
            </div>
            <div class="animated-line opacity-0" data-line="3">
              <span class="gradient-text-3">And ideas that matter</span>
            </div>
          </h1>
        </div>

        <!-- Skills Tags -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-2 mb-6">
          {heroData.skills.map((skill) => (
            <span class="px-3 py-1 bg-gray-800 text-gray-300 rounded-full text-sm font-medium border border-gray-700 hover:border-purple-500 transition-colors duration-300">
              {skill}
            </span>
          ))}
        </div>        <!-- Personal Introduction -->
        <p class="text-lg md:text-xl text-gray-300 mb-12 max-w-2xl leading-relaxed">
          {heroData.description}
        </p>

        <!-- Call-to-Action Button - Centered on All Devices -->
        <div class="flex justify-center">
          <button 
            class="bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600 hover:from-blue-700 hover:via-purple-700 hover:to-pink-700 text-white font-bold py-4 px-8 rounded-full text-lg md:text-xl transition-all duration-300 hover:scale-105 hover:shadow-2xl transform active:scale-95 focus:outline-none focus:ring-4 focus:ring-purple-500/50"
            style="opacity: 0; transform: translateY(20px);"
            data-animate="cta"
            onclick="openRoadmap()"
            aria-label={`${heroData.ctaText} - Open interactive roadmap`}
          >
            <span class="flex items-center gap-2">
              {heroData.ctaText}
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </span>
          </button>
        </div>

        <!-- Additional SEO-friendly hidden text -->
        <div class="sr-only">
          Software engineering student portfolio showcasing AI/ML projects, web development skills, and open-source contributions. Specializing in machine learning, artificial intelligence, and modern web technologies.
        </div>
      </div>
    </div>  </div>
</section>

<!-- Roadmap Modal -->
