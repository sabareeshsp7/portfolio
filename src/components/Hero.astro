<style>  /* Custom tech-focused animations */
  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-10px) rotate(2deg); }
  }
  
  @keyframes pulse-glow {
    0%, 100% { 
      box-shadow: 0 0 20px rgba(147, 51, 234, 0.3);
      transform: scale(1);
    }
    50% { 
      box-shadow: 0 0 40px rgba(147, 51, 234, 0.6);
      transform: scale(1.02);
    }
  }
  
  @keyframes image-glow {
    0%, 100% { 
      box-shadow: 0 0 30px rgba(59, 130, 246, 0.4), 0 0 60px rgba(147, 51, 234, 0.2);
    }
    50% { 
      box-shadow: 0 0 50px rgba(59, 130, 246, 0.6), 0 0 80px rgba(147, 51, 234, 0.4);
    }
  }
  
  @keyframes border-spin {
    0% { 
      background: linear-gradient(0deg, #3b82f6, #8b5cf6, #ec4899);
    }
    33% { 
      background: linear-gradient(120deg, #3b82f6, #8b5cf6, #ec4899);
    }
    66% { 
      background: linear-gradient(240deg, #3b82f6, #8b5cf6, #ec4899);
    }
    100% { 
      background: linear-gradient(360deg, #3b82f6, #8b5cf6, #ec4899);
    }
  }
  /* Image container animations */
  .floating {
    animation: float 4s ease-in-out infinite;
  }
  
  /* Ensure image is always visible on top */
  img[src="/sabari.png"] {
    z-index: 100 !important;
    position: absolute !important;
    opacity: 1 !important;
    visibility: visible !important;
  }
  
  /* Enhanced glow effect */
  .group:hover .relative.w-80 {
    animation: image-glow 2s ease-in-out infinite;
  }
  .floating {
    animation: float 4s ease-in-out infinite;
  }
  
  .neural-animation {
    animation: neural-pulse 2s ease-in-out infinite;
  }
  
  /* Enhanced hover effects for buttons */
  button[data-background]:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
  }
  
  button[data-background].active {
    animation: pulse-glow 2s ease-in-out infinite;
  }
  
  /* Gradient text animation */
  .gradient-text {
    background: linear-gradient(45deg, #3b82f6, #8b5cf6, #ec4899, #3b82f6);
    background-size: 300% 300%;
    animation: gradient-shift 3s ease infinite;
  }
  
  @keyframes gradient-shift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
  
  /* Accessibility improvements */
  @media (prefers-reduced-motion: reduce) {
    .floating,
    .neural-animation,
    .gradient-text {
      animation: none;
    }
  }
  
  /* Focus indicators */
  button:focus-visible {
    outline: 2px solid #8b5cf6;
    outline-offset: 2px;
  }

  /* Animated Three-Line Headline Styles */
  .animated-headline-container {
    margin-bottom: 3rem;
    perspective: 1000px;
  }

  .animated-line {
    display: block;
    margin-bottom: 0.5rem;
    transform: translateY(60px) rotateX(30deg);
    opacity: 0;
    animation: slideUpFade 1.2s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
  }

  .animated-line:nth-child(1) {
    animation-delay: 0.3s;
  }

  .animated-line:nth-child(2) {
    animation-delay: 0.6s;
  }

  .animated-line:nth-child(3) {
    animation-delay: 0.9s;
  }

  @keyframes slideUpFade {
    0% {
      opacity: 0;
      transform: translateY(60px) rotateX(30deg) scale(0.9);
    }
    50% {
      opacity: 0.7;
      transform: translateY(-10px) rotateX(-5deg) scale(1.02);
    }
    100% {
      opacity: 1;
      transform: translateY(0) rotateX(0deg) scale(1);
    }
  }

  /* Responsive Font Sizes - Large and Elegant */
  .animated-line {
    font-size: 2.5rem; /* 40px - Mobile */
    line-height: 0.9;
    letter-spacing: -0.02em;
  }

  @media (min-width: 640px) {
    .animated-line {
      font-size: 3.5rem; /* 56px - Small tablet */
    }
  }

  @media (min-width: 768px) {
    .animated-line {
      font-size: 4.5rem; /* 72px - Tablet */
    }
  }

  @media (min-width: 1024px) {
    .animated-line {
      font-size: 5.5rem; /* 88px - Desktop */
    }
  }

  @media (min-width: 1280px) {
    .animated-line {
      font-size: 6.5rem; /* 104px - Large desktop */
    }
  }

  @media (min-width: 1536px) {
    .animated-line {
      font-size: 7.5rem; /* 120px - XL screens */
    }
  }

  /* Beautiful Gradient Text Effects */
  .gradient-text-1 {
    background: linear-gradient(135deg, #3b82f6, #8b5cf6, #ec4899);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradientFlow1 4s ease infinite;
  }

  .gradient-text-2 {
    background: linear-gradient(225deg, #8b5cf6, #ec4899, #f59e0b);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradientFlow2 3.5s ease infinite reverse;
  }

  .gradient-text-3 {
    background: linear-gradient(315deg, #ec4899, #f59e0b, #10b981);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradientFlow3 4.5s ease infinite;
  }

  @keyframes gradientFlow1 {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  @keyframes gradientFlow2 {
    0%, 100% {
      background-position: 100% 0%;
    }
    50% {
      background-position: 0% 100%;
    }
  }

  @keyframes gradientFlow3 {
    0%, 100% {
      background-position: 50% 0%;
    }
    50% {
      background-position: 50% 100%;
    }
  }

  /* Hover Effects */
  .animated-line:hover span {
    transform: scale(1.05);
    transition: transform 0.3s ease;
  }

  /* Accessibility - Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .animated-line {
      animation: none;
      opacity: 1;
      transform: none;
    }
    
    .gradient-text-1,
    .gradient-text-2,
    .gradient-text-3 {
      animation: none;
      background-size: 100% 100%;
      background-position: center;
    }
  }
</style>

<script>
  import { animate } from "motion";

  // Animate image from left
  animate(
    "[data-animate='image']",
    { opacity: [0, 1], transform: ["translateX(-50px)", "translateX(0px)"] },
    { duration: 0.8, delay: 0.2 }
  );

  // Animate content from right
  animate(
    "[data-animate='content']",
    { opacity: [0, 1], transform: ["translateX(50px)", "translateX(0px)"] },
    { duration: 0.8, delay: 0.4 }
  );

  // Animate CTA button
  animate(
    "[data-animate='cta']",
    { opacity: [0, 1], transform: ["translateY(20px)", "translateY(0px)"] },
    { duration: 0.6, delay: 0.8 }
  );  // Interactive background selection with accessibility
  const backgroundButtons = document.querySelectorAll('[data-background]');
  backgroundButtons.forEach(button => {
    button.addEventListener('click', () => {
      // Remove active class from all buttons and update aria-checked
      backgroundButtons.forEach(btn => {
        btn.classList.remove('bg-gradient-to-r', 'from-blue-600', 'to-purple-600', 'border-blue-500', 'text-white', 'shadow-lg');
        btn.classList.add('border-gray-600', 'text-gray-300');
        btn.setAttribute('aria-checked', 'false');
        const dot = btn.querySelector('.w-3');
        if (dot) {
          dot.classList.remove('bg-white');
          dot.classList.add('bg-gray-600');
        }
      });
      
      // Add active class to clicked button and update aria-checked
      button.classList.add('bg-gradient-to-r', 'from-blue-600', 'to-purple-600', 'border-blue-500', 'text-white', 'shadow-lg');
      button.classList.remove('border-gray-600', 'text-gray-300');
      button.setAttribute('aria-checked', 'true');
      const activeDot = button.querySelector('.w-3');
      if (activeDot) {
        activeDot.classList.add('bg-white');
        activeDot.classList.remove('bg-gray-600');
      }
      
      // Add animation effect
      animate(
        button,
        { scale: [1, 1.05, 1] },
        { duration: 0.3 }
      );
    });
  });
  // Add floating animation to the image
  const imageElement = document.querySelector('[data-animate="image"] > div');
  if (imageElement) {
    imageElement.classList.add('floating');
  }

  // Roadmap Modal Functionality
  function openRoadmap() {
    const modal = document.getElementById('roadmap-modal');
    if (modal) {
      modal.style.display = 'flex';
      // Animate modal in
      animate(
        '#roadmap-modal',
        { opacity: [0, 1] },
        { duration: 0.3 }
      );
      animate(
        '.roadmap-content',
        { transform: ['scale(0.8) translateY(20px)', 'scale(1) translateY(0px)'] },
        { duration: 0.4, delay: 0.1 }
      );
    }
  }

  function closeRoadmap() {
    const modal = document.getElementById('roadmap-modal');
    if (modal) {
      animate(
        '#roadmap-modal',
        { opacity: [1, 0] },
        { duration: 0.2 }
      ).finished.then(() => {
        modal.style.display = 'none';
      });
    }
  }
  function navigateToSection(sectionId: string) {
    closeRoadmap();
    setTimeout(() => {
      const section = document.getElementById(sectionId);
      if (section) {
        section.scrollIntoView({ 
          behavior: 'smooth',
          block: 'start'
        });
      }
    }, 300);
  }

  // Make functions globally available
  (window as any).openRoadmap = openRoadmap;
  (window as any).closeRoadmap = closeRoadmap;
  (window as any).navigateToSection = navigateToSection;

  // Animate the three-line headline with enhanced effects
  const headlineLines = document.querySelectorAll('[data-line]');
  headlineLines.forEach((line, index) => {
    animate(
      line,
      { 
        opacity: [0, 1], 
        transform: ['translateY(60px) rotateX(30deg) scale(0.9)', 'translateY(0px) rotateX(0deg) scale(1)']
      },
      { 
        duration: 1.2, 
        delay: 0.5 + (index * 0.3)
      }
    );
  });
</script>
