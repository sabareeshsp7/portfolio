---
import BaseLayout from '../../layouts/BaseLayout.astro';

const project = {
  title: "Astro Blog Engine",
  shortDescription: "Lightning-fast static blog generator with markdown support and SEO optimization.",
  detailedDescription: "A next-generation static blog generator that combines the power of Astro framework with modern developer experience. Designed for content creators and developers who demand both performance and flexibility, it delivers lightning-fast load times while maintaining rich functionality.",
  githubUrl: "https://github.com/sabareeshsp7/astro-blog",
  liveUrl: "https://astro-blog-engine.netlify.app",
  technologies: ["Astro", "TypeScript", "Tailwind CSS", "Markdown", "Vite", "Netlify", "GitHub Actions", "Preact"],
  category: "Content Management",
  status: "Production Ready",
  complexity: "Intermediate",
  duration: "3 months",
  teamSize: "Solo Project",
  features: [
    "Lightning-fast static site generation with optimal Core Web Vitals",
    "Full markdown and MDX support with custom components",
    "Built-in SEO optimization with meta tags and structured data",
    "Dynamic theme system with dark/light mode toggle",
    "Automated RSS feed generation for subscribers",
    "Advanced code syntax highlighting with copy functionality",
    "Progressive Web App (PWA) capabilities",
    "Automated deployment with GitHub Actions"
  ],
  challenges: [
    "Optimizing build times for large content libraries",
    "Creating flexible theming system for customization",
    "Implementing efficient content search functionality",
    "Ensuring accessibility compliance across all components"
  ],
  impact: "Empowers content creators to build blazing-fast blogs that rank higher in search engines and provide superior user experience."
};
---

<BaseLayout title="Astro Blog Engine - Project Details">
  <main class="min-h-screen bg-gray-900 pt-20">
    <div class="max-w-6xl mx-auto px-8 py-16">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-6xl font-black text-white mb-6">
          <span class="bg-gradient-to-r from-orange-400 via-red-500 to-pink-500 bg-clip-text text-transparent">
            {project.title}
          </span>
        </h1>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
          {project.shortDescription}
        </p>
      </div>

      <!-- Project Image Placeholder -->
      <div class="relative h-96 bg-gradient-to-br from-orange-500 to-red-500 rounded-2xl overflow-hidden shadow-2xl mb-16">
        <div class="absolute inset-0 bg-black/20 flex items-center justify-center">
          <div class="text-center">
            <div class="text-8xl mb-4">üñºÔ∏è</div>
            <div class="text-white text-2xl font-bold">Project Screenshot</div>
            <div class="text-white/70 text-lg mt-2">Add your project image here</div>
          </div>
        </div>
      </div>

      <!-- Project Info Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-16">
        <!-- Project Details -->
        <div class="lg:col-span-2 space-y-8">
          <!-- About Section -->
          <div class="bg-gray-800/50 backdrop-blur-sm p-8 rounded-2xl border border-gray-700">
            <h2 class="text-3xl font-bold text-white mb-6 flex items-center gap-3">
              <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              About This Project
            </h2>
            <p class="text-gray-300 text-lg leading-relaxed">
              {project.detailedDescription}
            </p>
          </div>

          <!-- Technologies -->
          <div class="bg-gray-800/50 backdrop-blur-sm p-8 rounded-2xl border border-gray-700">
            <h2 class="text-3xl font-bold text-white mb-6 flex items-center gap-3">
              <svg class="w-8 h-8 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
              </svg>
              Technologies & Tools
            </h2>
            <div class="flex flex-wrap gap-3">
              {project.technologies.map((tech) => (
                <span class="px-4 py-2 bg-gradient-to-r from-gray-700 to-gray-600 text-white rounded-lg font-medium border border-gray-600 hover:border-orange-500 transition-colors">
                  {tech}
                </span>
              ))}
            </div>
          </div>

          <!-- Key Features -->
          <div class="bg-gray-800/50 backdrop-blur-sm p-8 rounded-2xl border border-gray-700">
            <h2 class="text-3xl font-bold text-white mb-6 flex items-center gap-3">
              <svg class="w-8 h-8 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Key Features
            </h2>
            <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
              {project.features.map((feature) => (
                <li class="flex items-start gap-3 p-4 bg-gray-700/30 rounded-lg border border-gray-600/50">
                  <span class="text-green-400 mt-1 flex-shrink-0">‚úì</span>
                  <span class="text-gray-300">{feature}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Challenges -->
          <div class="bg-gray-800/50 backdrop-blur-sm p-8 rounded-2xl border border-gray-700">
            <h2 class="text-3xl font-bold text-white mb-6 flex items-center gap-3">
              <svg class="w-8 h-8 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              Technical Challenges
            </h2>
            <ul class="space-y-4">
              {project.challenges.map((challenge) => (
                <li class="flex items-start gap-3 p-4 bg-orange-900/20 rounded-lg border border-orange-500/20">
                  <span class="text-orange-400 mt-1 flex-shrink-0">‚ö°</span>
                  <span class="text-gray-300">{challenge}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Impact -->
          <div class="bg-gradient-to-br from-blue-900/30 to-purple-900/30 p-8 rounded-2xl border border-blue-500/20">
            <h2 class="text-3xl font-bold text-white mb-6 flex items-center gap-3">
              <svg class="w-8 h-8 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
              </svg>
              Project Impact
            </h2>
            <p class="text-gray-300 text-lg leading-relaxed">
              {project.impact}
            </p>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
          <!-- Project Info -->
          <div class="bg-gray-800/50 backdrop-blur-sm p-6 rounded-2xl border border-gray-700">
            <h3 class="text-xl font-bold text-white mb-4">Project Info</h3>
            <div class="space-y-4">
              <div>
                <span class="text-gray-400 text-sm">Status</span>
                <div class="px-3 py-1 bg-green-500/20 text-green-400 rounded-full text-sm font-medium inline-block mt-1">
                  {project.status}
                </div>
              </div>
              <div>
                <span class="text-gray-400 text-sm">Category</span>
                <div class="text-white font-medium mt-1">{project.category}</div>
              </div>
              <div>
                <span class="text-gray-400 text-sm">Duration</span>
                <div class="text-white font-medium mt-1">{project.duration}</div>
              </div>
              <div>
                <span class="text-gray-400 text-sm">Team Size</span>
                <div class="text-white font-medium mt-1">{project.teamSize}</div>
              </div>
              <div>
                <span class="text-gray-400 text-sm">Complexity</span>
                <div class="px-3 py-1 bg-blue-500/20 text-blue-400 rounded-full text-sm font-medium inline-block mt-1">
                  {project.complexity}
                </div>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="space-y-4">
            <a 
              href={project.githubUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="block w-full bg-gradient-to-r from-orange-600 to-red-600 hover:from-orange-700 hover:to-red-700 text-white font-bold py-4 px-6 rounded-lg transition-all duration-300 hover:scale-105 hover:shadow-xl text-center"
            >
              <span class="flex items-center justify-center gap-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                </svg>
                View on GitHub
              </span>
            </a>
            
            {project.liveUrl && (
              <a 
                href={project.liveUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="block w-full bg-gradient-to-r from-blue-600 to-cyan-600 hover:from-blue-700 hover:to-cyan-700 text-white font-bold py-4 px-6 rounded-lg transition-all duration-300 hover:scale-105 hover:shadow-xl text-center"
              >
                <span class="flex items-center justify-center gap-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                  View Live Demo
                </span>
              </a>
            )}
            
            <a 
              href="/#projects"
              class="block w-full bg-gray-700 hover:bg-gray-600 text-white font-bold py-4 px-6 rounded-lg transition-all duration-300 hover:scale-105 text-center"
            >
              <span class="flex items-center justify-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Projects
              </span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
